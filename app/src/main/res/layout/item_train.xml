<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/cardview_train_height"
    android:layout_margin="@dimen/common_margin_default">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imgTrain"
            android:src="@drawable/ic_train"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/cardview_gradient" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="@dimen/common_margin_default"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/icTrain"
                android:src="@drawable/ic_train"
                android:layout_width="@dimen/common_icon_default"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingTop="@dimen/ic_train_top_padding"
                app:tint="@color/md_theme_secondaryContainer_highContrast"/>

            <TextView
                android:id="@+id/tvTrainName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/cardview_train_title"
                android:textColor="@color/md_theme_secondaryContainer_highContrast"
                android:textAppearance="?attr/textAppearanceHeadline5"
                android:layout_marginStart="@dimen/common_margin_min"
                android:layout_gravity="center"/>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>